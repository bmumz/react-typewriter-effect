{
  "name": "react-component-library-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for React component libraries- set up with TypeScript, Jest, Rollup and Storybook.",
  "author": "Brandi Mummery",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "start": "start-storybook -p 6006",
    "build": "rollup -c",
    "build:storybook": "build-storybook",
    "watch": "rollup -cw",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.4.10",
    "@storybook/addon-essentials": "^6.4.10",
    "@storybook/addon-links": "^6.4.10",
    "@storybook/react": "^6.4.10",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "rollup": "^2.63.0",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "typings": "^2.1.1"
  },
  "dependencies": {
    "eslint-config-airbnb": "^19.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
